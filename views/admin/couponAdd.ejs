    <script>
      // Wait for the DOM to be fully loaded
      document.addEventListener("DOMContentLoaded", function () {
        // Initialize Flatpickr date pickers
        flatpickr("#start-date", {
          dateFormat: "Y-m-d", // yyyy-mm-dd
          minDate: "today",
        });

        flatpickr("#end-date", {
          dateFormat: "Y-m-d", // yyyy-mm-dd
          minDate: "today",
        });

        const form = document.getElementById("coupanAdd");

        // Prevent 'e' from being typed in numeric fields
        const numericFields = document.querySelectorAll(
          "#coupons-limits, #Min-Discount-Value, #Max-Discount-Value"
        );
        numericFields.forEach((field) => {
          field.addEventListener("keydown", function (e) {
            if (e.key === "e" || e.key === "E" || e.key === "-") {
              e.preventDefault();
            }
          });
        });

        // Handle the discount value field to allow only numbers and not exceed 90%
        const discountValueField = document.getElementById("discount-value");
        discountValueField.addEventListener("input", function (e) {
          // Remove any non-numeric characters
          this.value = this.value.replace(/[^\d]/g, "");

          // Check if value exceeds 90
          if (parseInt(this.value) > 90) {
            this.value = "90";
            addErrorMessage(this, "Discount cannot exceed 90%");
          } else {
            removeErrorMessage(this);
          }
        });

        // Add percentage sign to discount value field
        window.addPercentageSign = function (input) {
          // The function is already defined in the HTML, so we don't need to redefine it
          // But we could extend it if needed
        };

        // Form submission handler
        form.addEventListener("submit", function (e) {
          e.preventDefault();

          // Clear all previous error messages
          clearAllErrors();

          // Get form values
          const startDate = document.getElementById("start-date").value;
          const endDate = document.getElementById("end-date").value;
          const couponCode = document.getElementById("coupons-code").value;
          const couponLimits = document.getElementById("coupons-limits").value;
          const minDiscountValue =
            document.getElementById("Min-Discount-Value").value;
          const maxDiscountValue =
            document.getElementById("Max-Discount-Value").value;
          const discountValue = document.getElementById("discount-value").value;

          // Validate all fields
          let hasErrors = false;

          // Required fields validation
          const requiredFields = [
            { field: "start-date", label: "Start Date" },
            { field: "end-date", label: "End Date" },
            { field: "coupons-code", label: "Coupon Code" },
            { field: "coupons-limits", label: "Coupon Limits" },
            { field: "Min-Discount-Value", label: "Min Discount Value" },
            { field: "Max-Discount-Value", label: "Max Discount Value" },
            { field: "discount-value", label: "Discount Value" },
          ];

          requiredFields.forEach((item) => {
            const field = document.getElementById(item.field);
            if (!field.value.trim()) {
              addErrorMessage(field, `${item.label} is required`);
              hasErrors = true;
            }
          });

          // Date validation
          if (startDate && endDate) {
            const startDateObj = parseDate(startDate);
            const endDateObj = parseDate(endDate);

            if (startDateObj > endDateObj) {
              addErrorMessage(
                document.getElementById("start-date"),
                "Start Date cannot be greater than End Date"
              );
              hasErrors = true;
            }
          }

          // Min/Max discount validation
          if (minDiscountValue && maxDiscountValue) {
            if (parseFloat(minDiscountValue) > parseFloat(maxDiscountValue)) {
              addErrorMessage(
                document.getElementById("Min-Discount-Value"),
                "Min Discount Value cannot be greater than Max Discount Value"
              );
              hasErrors = true;
            }
          }

          // If there are errors, don't submit the form
          if (hasErrors) {
            Swal.fire({
              icon: "error",
              title: "Validation Error",
              text: "Please fix the errors before submitting the form.",
              confirmButtonColor: "#3085d6",
            });
            return;
          }

          // If validation passes, submit form data via fetch
          const formData = {
            startDate,
            endDate,
            couponCode,
            couponLimits,
            minDiscountValue,
            maxDiscountValue,
            discountValue,
          };

          console.log("thissfasjdf", formData);
          // Send data to backend
          fetch("/admin/createCoupon", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(formData),
          })
            .then((response) => response.json())

            .then((data) => {
              if (data.success) {
                Swal.fire({
                  icon: "success",
                  title: "Success",
                  text: data.message || "Coupon created successfully!",
                  confirmButtonColor: "#3085d6",
                }).then(() => {
                  // Redirect after success if needed
                  window.location.href = "/admin/getCouponList";
                });
              } else {
                // Handle field-specific errors from backend
                if (data.errors && typeof data.errors === "object") {
                  Object.keys(data.errors).forEach((fieldName) => {
                    const fieldId = fieldNameToId(fieldName);
                    const field = document.getElementById(fieldId);
                    if (field) {
                      addErrorMessage(field, data.errors[fieldName]);
                    }
                  });
                }

                Swal.fire({
                  icon: "error",
                  title: "Error",
                  text:
                    data.message ||
                    "Failed to create coupon. Please check the form.",
                  confirmButtonColor: "#3085d6",
                });
              }
            })
            .catch((error) => {
              console.error("Error:", error);
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "An unexpected error occurred. Please try again later.",
                confirmButtonColor: "#3085d6",
              });
            });
        });

        function parseDate(dateStr) {
          const [day, month, year] = dateStr.split("-");
          return new Date(year, month - 1, day);
        }

        // Helper function to map API field names to form field IDs
        function fieldNameToId(fieldName) {
          const mapping = {
            startDate: "start-date",
            endDate: "end-date",
            couponCode: "coupons-code",
            couponLimits: "coupons-limits",
            minDiscountValue: "Min-Discount-Value",
            maxDiscountValue: "Max-Discount-Value",
            discountValue: "discount-value",
          };

          return mapping[fieldName] || fieldName;
        }

        function addErrorMessage(field, message) {
          removeErrorMessage(field);

          field.classList.add("is-invalid");

          const errorDiv = document.createElement("div");
          errorDiv.className = "invalid-feedback";
          errorDiv.textContent = message;
          field.parentNode.appendChild(errorDiv);
        }

        function removeErrorMessage(field) {
          field.classList.remove("is-invalid");
          const existingError =
            field.parentNode.querySelector(".invalid-feedback");
          if (existingError) {
            existingError.remove();
          }
        }

        function clearAllErrors() {
          document.querySelectorAll(".is-invalid").forEach((field) => {
            removeErrorMessage(field);
          });
        }
      });
